<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_cartaItemOrden"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical" >
	    
	    <ImageView
	        android:id="@+id/imagen_itemCartaActivity"
	        android:layout_width="fill_parent"
	        android:layout_height="180dp" />

	    <TextView
	        android:id="@+id/nombre_itemCartaActivity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
	        android:textStyle="bold"
	        android:textSize="15dp"
	        android:text="TextView"
	        android:textColor="#000000" />
	
	    <TextView
	        android:id="@+id/descp_itemCartaActivity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
	        android:text="TextView"
	        android:textColor="#000000" />
	    
	    <TextView
	        android:id="@+id/precio_itemCartaActivity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
	        android:text="Precio Unidad: S/0.00"
	        android:textColor="#000000" />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
	        android:orientation="horizontal" >
	        
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="Cantidad"
		        android:textColor="#000000"
		        android:layout_gravity="center" />"
		    
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_weight="1" >
		    
			    <NumberPicker android:id="@+id/cantidad_picker"
				      android:layout_marginTop="5dp"
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      />
			 </LinearLayout>
		 </LinearLayout>
		 
	    <TextView
	        android:id="@+id/precio_totalCartaActivity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
	        android:text="Precio Total: S/0.00"
	        android:textColor="#000000" />
	    
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ordenarItem_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="AGREGAR" />
    </LinearLayout>

</RelativeLayout>